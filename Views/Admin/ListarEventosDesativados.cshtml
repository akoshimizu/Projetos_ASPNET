@model IEnumerable<PROJETO.Models.Evento>
@{
    Layout = "_NovoLayout";
}
<h1>Eventos - Admin</h1>
<hr/>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Local</th>
            <th>Data</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.Nome</td>
                <td>@evento.Categoria.NomeCategoria</td>
                <td>@evento.Local.NomeDoLocal</td>
                <td>@evento.Data.ToString("dd/MM/yyyy")</td>
                <td>@evento.Preco.ToString("C")</td>
                <td>
                    
                    <a class="btn btn-success" href="/Admin/EditarEvento/@evento.Id">Editar</a>
                    <a class="btn btn-primary" href="/Evento/AtivarEvento/@evento.Id">Ativar</a>
                    

                    <form style="display: inline;" asp-controller="Evento" asp-action="DeletarEvento">
                    <input type="hidden" name="id" id="id" value="@evento.Id">
                    <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>